import pygame
import random

# Define as constantes da caixa
BOX_WIDTH = 400
BOX_HEIGHT = 400

# Define as cores
BLACK = (0, 0, 0)
WHITE = (255, 255, 255)

# Inicializa o Pygame
pygame.init()

# Define o tamanho da tela
screen = pygame.display.set_mode([BOX_WIDTH, BOX_HEIGHT])

# Define a quantidade de bolas e a velocidade inicial de cada uma
num_balls = 2
min_speed = 2
max_speed = 6

# Cria uma lista de bolas
balls = []

# Adiciona bolas à lista
for i in range(num_balls):
  # Cria uma nova bola
  ball = {
    "x": random.randint(0, BOX_WIDTH),
    "y": random.randint(0, BOX_HEIGHT),
    "dx": random.randint(min_speed, max_speed),
    "dy": random.randint(min_speed, max_speed),
    "radius": random.randint(10, 30)
  }
  # Adiciona a bola à lista
  balls.append(ball)

# Executa o loop principal
while True:
  # Preenche a tela com a cor preta
  screen.fill(BLACK)

  # Atualiza a posição de cada bola
  for ball in balls:
    ball["x"] += ball["dx"]
    ball["y"] += ball["dy"]

    # Verifica se a bola colidiu com uma das paredes
    if ball["x"] - ball["radius"] < 0 or ball["x"] + ball["radius"] > BOX_WIDTH:
      ball["dx"] = -ball["dx"]
    if ball["y"] - ball["radius"] < 0 or ball["y"] + ball["radius"] > BOX_HEIGHT:
      ball["dy"] = -ball["dy"]

    # Desenha a bola na tela
    pygame.draw.circle(screen, WHITE, (ball["x"], ball["y"]), ball["radius"])

  # Atualiza a tela
  pygame.display.flip()
